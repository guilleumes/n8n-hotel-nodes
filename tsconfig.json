{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/",
    "rootDir": "./",
    "target": "ES2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["credentials/**/*.ts", "nodes/**/*.ts", "src/@types/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*", "**/*.test.ts", "**/*.spec.ts", "gulpfile.js"]
}
